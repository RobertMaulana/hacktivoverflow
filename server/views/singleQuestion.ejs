<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <form action="/answer" method="post">
      <h3><%= data.title_question %></h3>
      <p><%= data.question %></p>
      <h3>Answer</h3>
      <% let dataComment = []; %>
      <% data.Answers.forEach((answers) => {%>
        <h5><%= answers.answer %><input type="text" name="vote" value=""></h5>
          <input type="hidden" name="answer_id" value="<%= answers.id %>">
          <button type="button"><a href="/answer/<%= answers.id %>">Edit</a></button>
          <button type="button"><a href="/answer/upvote/<%= answers.id %>">Upvote</a></button>
          <button type="button"><a href="/answer/downvote/<%= answers.id %>">Downvote</a></button>
          <% answers.Comments.forEach((comments) => { %>
            <% dataComment.push(comments.comment) %>
          <% }) %>
      <%})%>
      <h3>Comment</h3>
      <% for(let i = 0; i < dataComment.length; i++){%>
        <p><%= dataComment[i]%></p>
      <%}%>
      <input type="hidden" name="id_question" value="<%= data.id %>">
      <input type="hidden" name="title_question" value="<%= data.title_question %>">
      <label for="comment">Comment</label><br>
      <textarea name="comment" rows="8" cols="80"></textarea><br>
      <label for="answer">Answer</label><br>
      <textarea name="answer" rows="8" cols="80"></textarea><br>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
